<!DOCTYPE html>
<html lang="en">
<meta charset="UTF-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
<link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Oswald&display=swap" rel="stylesheet">
<title>Lista de Usuarios</title>
<head>

</head>

<body>

  <style>
    h2 {
      font-family: 'Oswald', sans-serif;
    }
  </style>
  
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="/new-entry"><i class="fa-solid fa-user-plus"></i> Nuevo Usuario</a>
  </nav>

  <div class="container mt-4 shadow-lg p-3 mb-5 bg-body rounded">

    <h2 class="p-3">LISTA DE USUARIOS:</h2>    
    <table class="table mt-2 table-dark table-striped">
      <thead>
        <tr class="text-center table-group-divider">
          <th scope="col">ID</th>
          <th scope="col">Nombre</th>
          <th scope="col">Apellido</th>            
          <th scope="col">Edad</th>
          <th scope="col">Correo</th> 
          <th scope="col">Eliminar</th>            
        </tr>
      </thead>
      <tbody class="text-center">
        <% users.forEach(function (user){ %>
        <tr>  
          <td><%= user.id %></td>  
          <td><%= user.name %></td>
          <td><%= user.lastname %></td>
          <td><%= user.age %></td>
          <td><%= user.email %></td>
          <td>
            <a href="/delete/<%= user.id %>" class="btn btn-outline-danger"><i class='bx bxs-trash-alt'></i></a>                   
          </td>
        </tr>                                   
        <% }) %>
      </tbody>
    </table>
  </div>
  <script src="https://kit.fontawesome.com/43ebf4cfc4.js" crossorigin="anonymous"></script>
</body>
</html>